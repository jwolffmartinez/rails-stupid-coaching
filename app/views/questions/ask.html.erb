

<div class="container">



  <h1>Stupid Coaching</h1>
  <p>Ask your coach anything</p>

  <form action="/answer" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="question" class="form-control" placeholder="Your question..">
    <input type="submit" value="Ask!" class="btn btn-primary">
  </form>





</div>


